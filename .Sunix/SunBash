# set commands path
if [ -d "$HOME/.Sunix/bin" ] ; then
PATH=$HOME/.Sunix/bin:$PATH
fi
# you can execute your program just like 
# $ myprog
PATH=$PATH:.

# functions
# goto is a command which for shortcuts
# e.g. $ goto www
goto()
{
	eval where=\$$1
	if [ $where ] ; then
		eval cd $where
	fi
}

# some system aliases
alias ..='cd ..'
alias l='ls'
alias la='ls -A'
alias ll='ls -l'
alias mk="make"
alias xo="chmod a+u"

# some Sunix aliases
alias g='go'
alias ?='about'
alias g2='goto'
alias cln='clean'


# init shortcuts
if [ -f ~/.Sunix/shortcuts ]; then
	. ~/.Sunix/shortcuts
fi
